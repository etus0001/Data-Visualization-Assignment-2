{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Distribution of Indigenous Languages Across Australia",
  "width": "container",
  "height": 460,
  "background": "white",
  "padding": 5,

  "projection": {
    "type": "mercator",
    "center": [134, -27],
    "scale": 600
  },

  "layer": [
    {
      "name": "outline",
      "data": {
        "url": "data/aus_states.json",
        "format": { "type": "topojson", "mesh": "states" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "transparent",
        "stroke": "#111827",
        "strokeWidth": 1.2
      }
    },
    {
      "name": "points",
      "data": { "url": "data/austlang_trimmed.csv" },
      "transform": [{ "filter": "isValid(datum.lat) && isValid(datum.lon)" }],
      "mark": { "type": "circle", "opacity": 0.8, "stroke": "white", "strokeWidth": 0.5 },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "size": { "value": 24 },
        "color": { "value": "#ef4444" },
        "tooltip": [
          { "field": "language_name", "type": "nominal", "title": "Language" },
          { "field": "lat", "type": "quantitative", "format": ".3f" },
          { "field": "lon", "type": "quantitative", "format": ".3f" }
        ]
      }
    }
  ],

  "config": { "axis": { "grid": false } }
}





